@model IEnumerable<FamilyTown>
<div id="page-wrapper">
    <div class="row">
        <div class="col-md-12">
            <h3>户主信息</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-lg-12 col-sx-12 col-sm-12">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>户主ID</th>
                        <th>户主姓名</th>
                        <th>身份证号</th>
                        <th>贫困号</th>
                        <th>地址</th>
                        <th>所在村镇</th>
                        <th>家中人数</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.Id</td>
                            <td>@x.HostName</td>
                            <td>@x.CardNo</td>
                            <td>@x.PoorNo</td>
                            <td>@x.Address</td>
                            <td>@x.TownName</td>
                            <td>@x.MemberCount</td>
                            <td><a asp-action="CreateFamilyMember" asp-controller="Admin" asp-route-id="@x.Id" class="btn btn-success">成员<i class="fa fa-plus"></i></a><a asp-action="CreateSituation" asp-controller="Admin" asp-route-id="@x.Id" class="btn btn-info">家庭情况<i class="fa fa-plus"></i></a><a asp-action="EditFamily" asp-controller="Admin" asp-route-id="@x.Id" class="btn btn-primary">编辑<i class="fa fa-wrench"></i></a><a asp-action="FamilyDetails" asp-controller="Admin" asp-route-id="@x.Id" class="btn btn-warning">查看<i class="fa fa-search"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
