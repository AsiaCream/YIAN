@{
    Layout = null;
}
<h3>@ViewBag.Title：养殖统计<span>&nbsp;<i class="fa fa-anchor">@ViewBag.Time</i></span></h3>
<div class="col-md-8">
    <div id="farming"></div>
</div>
<div class="col-md-4">
    <h4>统计数据</h4>
    <table class="table">
        <thead>
            <tr>
                <th>种类</th>
                <th>数量(单位：只)</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>牛</th>
                <td>@ViewBag.cow</td>
            </tr>
            <tr>
                <th>马</th>
                <td>@ViewBag.horse</td>
            </tr>
            <tr>
                <th>羊</th>
                <td>@ViewBag.Sheep</td>
            </tr>
            <tr>
                <th>鸡</th>
                <td>@ViewBag.Chicken</td>
            </tr>
            <tr>
                <th>鸭</th>
                <td>@ViewBag.Duck</td>
            </tr>
            <tr>
                <th>鹅</th>
                <td>@ViewBag.Goose</td>
            </tr>
            <tr>
                <th>猪</th>
                <td>@ViewBag.Pig</td>
            </tr>
            <tr>
                <th>其它牲口</th>
                <td>@ViewBag.OthersAnimal</td>
            </tr>
        </tbody>
    </table>
</div>
<script type="text/javascript">
    $('#farming').highcharts({
        chart: {
            plotBackgroundColor: null,
            plotBorderWidth: null,
            plotShadow: false,
            type: 'pie'
        },
        colors: ['#058DC7', '#50B732', '#ED561B', '#DDDF00', '#24CBE5', '#64E572', '#FF9655', '#FFF263', '#6AF9C4'],
        title: {
            text: '扇形统计图'
        },
        tooltip: {
            pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
        },
        credits: {
            enabled: false,
        },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: true,
                    format: '<b>{point.name}</b>: {point.percentage:.1f} %',
                    style: {
                        color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
                    }
                }
            }
        },
        series: [{
            name: 'Brands',
            colorByPoint: true,
            data: [{
                name: '牛',
                y: @ViewBag.cow,
            }, {
                name: '马',
                y: @ViewBag.horse,
            }, {
                name: '羊',
                y: @ViewBag.Sheep,
            }, {
                name: '鸡',
                y: @ViewBag.Chicken,
            }, {
                name: '鸭',
                y: @ViewBag.Duck,
            }, {
                name: '鹅',
                y: @ViewBag.Goose,
            }, {
                name: '猪',
                y: @ViewBag.Pig,
            }, {
                name: '其它牲口',
                y: @ViewBag.OthersAnimal,
            }, ]
        }]
    });
</script>