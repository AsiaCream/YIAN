@model IEnumerable<User>
<div id="page-wrapper">
    <div class="row">
        <div class="col-md-12">
            <h3>管理员管理页面&nbsp;<a href="#" id="createBtn" class="btn btn-primary">添加管理员</a></h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6">
                <table class="table">
                    <caption>普通管理员列表&nbsp;当前人数<i class="text-info fa fa-users">@ViewBag.UserCount</i></caption>
                    <thead>
                        <tr>
                            <th>用户名</th>
                            <th>角色</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(User x in Model)
                        {
                            <tr>
                                <td>@x.UserName</td>
                                <td>@x.Name</td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
            <div class="col-md-6">
                <table class="table">
                    <caption>超级管理员列表&nbsp;当前人数<i class="text-info fa fa-users">@ViewBag.AdminCount</i></caption>
                    <thead>
                        <tr>
                            <th>用户名</th>
                            <th>角色</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (User x in ViewBag.Admin)
                        {
                            <tr>
                                <td>@x.UserName</td>
                                <td>@x.Name</td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    @*<div class="row">
        <div class="col-md-12">
            <div class="col-md-4">
                <h4>创建管管理员</h4>
                
            </div>
        </div>
    </div>*@
</div>
<div class="modal fade" id="createModal" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title">
                    添加管理员
                </h4>
            </div>
            <div class="modal-body">
                <form id="createForm" asp-action="CreateAdmin" asp-controller="Account">
                    <input type="text" name="username" class="form-control" placeholder="用户名"/><br />
                    <input type="text" name="password" class="form-control" placeholder="密码"/><br />
                    <label>
                        是否为超级管理员？
                    </label>
                    <select name="position" class="form-control">
                    <option>否</option>
                    <option>是</option>
                    </select> <br />
                    <input type="text" name="name" class="form-control" placeholder="姓名"/><br />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default"
                        data-dismiss="modal">
                    关闭
                </button>
                <button type="button" id="send" class="btn btn-primary">
                    添加
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal -->
</div>
<script src="~/scripts/jquery-2.1.1.js"></script>
<script type="text/javascript">
    $("#createBtn").click(function () {
        $("#createModal").modal("show");
    });
    $("#send").click(function () {
        $("#createForm").submit();
    });
</script>
