<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>YIAN</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/styles/bootstrap.css" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="~/styles/metisMenu.css" rel="stylesheet">

    <!-- Timeline CSS -->
    <link href="~/styles/timeline.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/styles/sb-admin-2.css" rel="stylesheet">

    <!-- Morris Charts CSS -->
    <link href="~/styles/morris.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="~/styles/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="~/scripts/html5shiv.js"></script>
        <script src="~/scripts/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" asp-action="Index" asp-controller="Home" style="font-family:微软雅黑;">依安扶贫后台管理页面</a>
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">
                <!-- /.dropdown -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">超级管理员
                        <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="#"><i class="fa fa-user fa-fw"></i> 用户信息</a>
                        </li>
                        <li>
                            <a asp-action="Modify" asp-controller="Account"><i class="fa fa-gear fa-fw"></i> 修改密码</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="javascript:$('.logout').submit()"><i class="fa fa-sign-out fa-fw"></i> 退出</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li class="active">
                            <a href="#"><i class="fa fa-bar-chart"></i> 扶贫管理<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a asp-action="CreateFamily" asp-controller="Admin"><i class="fa fa-file"></i> 录入户主信息</a>
                                </li>
                                <li>
                                    <a asp-action="HostDetails" asp-controller="Admin"><i class="fa fa-file-text"></i> 查看所有户主</a>
                                </li>
                                <li>
                                    <a href="#"><i class="fa fa-edit"></i> 修改信息</a>
                                </li>
                                <li>
                                    <a href="#"><i class="fa fa-search"></i> 信息查询</a>
                                </li>
                                <li>
                                    <a asp-action="Statistics" asp-controller="Home"><i class="fa fa-line-chart"></i> 数据统计</a>
                                </li>
                                <li>
                                    <a asp-action="Analysis" asp-controller="Home"><i class="fa fa-pie-chart"></i> 数据分析</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <li class="active">
                            <a href="#" ><i class="fa fa-wrench"></i> 系统设置<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a asp-action="LowLine" asp-controller="Admin"><i class="fa fa-bank"></i> 低保线</a>
                                </li>
                                <li>
                                    <a asp-action="Town" asp-controller="Admin"><i class="fa fa-bank"></i> 乡镇管理</a>
                                </li>
                                <li>
                                    <a asp-action="Admin" asp-controller="Account"><i class="fa fa-users"></i> 管理员管理</a>
                                </li>
                                <li>
                                    <a href="javascript:$('.logout').submit()"><i class="fa fa-power-off"></i> 退出登陆</a>
                                </li>
                            </ul>
                            <form asp-action="Logout" asp-controller="Account" class="logout"></form>
                            <!-- /.nav-second-level -->
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>

        
        <div>
            @RenderBody()
        </div>
    </div>


    <!-- /#wrapper -->
    
</body>

</html>
<!-- jQuery -->
<script src="~/scripts/jquery-2.1.1.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="~/scripts/bootstrap.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="~/scripts/metisMenu.js"></script>

<!-- Morris Charts JavaScript -->
<script src="~/scripts/raphael.js"></script>
<script src="~/scripts/morris.js"></script>
<script src="~/scripts/morris-data.js"></script>

<!-- Custom Theme JavaScript -->
<script src="~/scripts/sb-admin-2.js"></script>
<script src="~/scripts/Chart.js"></script>